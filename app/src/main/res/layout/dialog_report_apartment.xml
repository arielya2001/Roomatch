<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Theme.Roomatch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/textViewReportTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="סיבת הדיווח"
        android:textDirection="rtl"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerReportReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:spinnerMode="dropdown"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/textViewAdditionalDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:text="פרטים נוספים (לא חובה)"
        android:textDirection="rtl"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextAdditionalDetails"
        style="@style/Theme.Roomatch.secondary"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="right|top"
        android:inputType="textMultiLine"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCancelReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ביטול" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonSendReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שלח דיווח" />
    </LinearLayout>
</LinearLayout>
