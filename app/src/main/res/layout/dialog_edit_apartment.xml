<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- עיר -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="עיר:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="הזן עיר"
        android:layout_marginBottom="8dp" />

    <!-- רחוב -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="רחוב:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editStreet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="הזן רחוב"
        android:layout_marginBottom="8dp" />

    <!-- מספר בית -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="מספר בית:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editHouseNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="הזן מספר בית"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <!-- מחיר -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="מחיר:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="הזן מחיר"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <!-- תיאור -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="תיאור:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="הזן תיאור"
        android:lines="3"
        android:layout_marginBottom="8dp" />

    <!-- מספר שותפים -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="מספר שותפים דרושים:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editRoommatesNeeded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="הזן מספר שותפים"
        android:inputType="number" />

</LinearLayout>
