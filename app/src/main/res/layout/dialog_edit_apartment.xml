<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Theme.Roomatch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- כותרת -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="בחר כתובת"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_search_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="חפש כתובת"
        android:layout_marginBottom="8dp"/>

<!--    &lt;!&ndash; כתובת נבחרת &ndash;&gt;-->
<!--    <TextView-->
<!--        android:id="@+id/selectedAddressText"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:padding="8dp"-->
<!--        android:text="בחר כתובת..."-->
<!--        android:textSize="16sp"-->
<!--        android:textColor="@android:color/black"-->
<!--        android:background="#e0e0e0"-->
<!--        android:visibility="gone" />-->

    <!-- שדות כתובת -->
    <EditText
        android:id="@+id/editCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="עיר"
        android:inputType="text" />

    <EditText
        android:id="@+id/editStreet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="רחוב"
        android:inputType="text" />

    <EditText
        android:id="@+id/editHouseNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="מספר בית"
        android:inputType="number" />

    <!-- עלות חודשית -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="עלות חודשית"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/editPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="מחיר"
        android:inputType="number"
        android:textAlignment="viewEnd" />

    <!-- מספר שותפים -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="מספר שותפים דרוש"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/editRoommatesNeeded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="מספר שותפים"
        android:inputType="number"
        android:textAlignment="viewEnd" />


    <!-- תיאור -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="תיאור"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/editDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="תיאור"
        android:lines="3"
        android:textAlignment="viewEnd" />

    <!-- כפתורים -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/Theme.Roomatch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="ביטול" />

        <Button
            android:id="@+id/btn_save"
            style="@style/Theme.Roomatch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="שמור" />
    </LinearLayout>
</LinearLayout>
