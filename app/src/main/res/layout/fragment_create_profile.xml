<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="צור פרופיל"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <EditText
            android:id="@+id/editFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שם מלא"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/editprofileAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="גיל"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="מין" />

        <RadioGroup
            android:id="@+id/genderGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioOther"
                style="@style/Theme.Roomatch.secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="אחר / לא רוצה לשתף" />

            <RadioButton
                android:id="@+id/radioFemale"
                style="@style/Theme.Roomatch.secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="נקבה" />

            <RadioButton
                android:id="@+id/radioMaleProfile"
                style="@style/Theme.Roomatch.secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="זכר" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="16dp"
            android:text="סוג משתמש"
            android:textStyle="bold" />
        <RadioGroup
            android:id="@+id/userTypeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioSeeker"
                style="@style/Theme.Roomatch.secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="2dp"
                android:padding="5dp"
                android:text="מחפש דירה" />

            <RadioButton
                android:id="@+id/radioOwner"
                style="@style/Theme.Roomatch.secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="2dp"
                android:padding="5dp"
                android:text="בעל דירה" />
        </RadioGroup>

        <EditText
            android:id="@+id/editCreateDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="תיאור (אופציונלי)"
            android:inputType="textMultiLine"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lifestyleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="סגנון חיים:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:visibility="gone" />
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/createProfileLifeStyles"
            android:name="com.example.roomatch.view.fragments.LifeStylesFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/interestsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תחומי עניין:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/createProfileInterests"
            android:name="com.example.roomatch.view.fragments.InterestsFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:visibility="gone" />








        <Button
            android:id="@+id/buttonSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="צור פרופיל" />
    </LinearLayout>
</ScrollView>