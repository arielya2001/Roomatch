<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Search bar -->

        <!-- Filter button with the funnel icon (styled like apartment search) -->

        <!-- Filters container (hidden by default) -->

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="חיפוש שותפים"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonResetFilters"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="0"
                android:background="@drawable/quantum_ic_clear_grey600_24" />

            <Button
                android:id="@+id/buttonToggleFilters"
                style="@style/Theme.Roomatch"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="0"
                android:background="@mipmap/ic_filter_foreground" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/filterCheckboxContainer"
            style="@style/Theme.Roomatch.secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:visibility="gone">

            <!-- Lifestyle Filter Section -->

            <!-- Lifestyle checkboxes (hidden initially) -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonToggleLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:text="רדיוס חיפוש" />

                <Button
                    android:id="@+id/buttonToggleInterests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:text="תחומי עניין" />

                <Button
                    android:id="@+id/buttonToggleLifestyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:text="סגנון חיים" />
            </LinearLayout>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/seekerLifeStyles"
                android:name="com.example.roomatch.view.fragments.LifeStylesFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:visibility="gone"

                />

            <!-- Interests Filter Section -->

            <!-- Interests checkboxes (hidden initially) -->
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/seekerInterests"
                android:name="com.example.roomatch.view.fragments.InterestsFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:visibility="gone" />

            <!-- Location Filter Section -->


            <!-- location radius spinner -->
            <Spinner
                android:id="@+id/radiusSpinner"
                style="@style/Theme.Roomatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingStart="5dp"
                android:scrollbarSize="4dp"
                android:visibility="gone" />


            <!-- Location checkboxes (hidden initially) -->
            <!--            <LinearLayout-->
            <!--                android:id="@+id/locationCheckboxContainer"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:orientation="vertical"-->
            <!--                android:visibility="gone" />-->

            <!-- Reset filters button container for better UX -->

        </LinearLayout>

        <!-- Partner list -->

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchViewPartner"
            style="@style/Theme.Roomatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:iconifiedByDefault="false"
            android:queryHint="חפש לפי שם..." />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPartners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />

    </LinearLayout>

    <!-- Floating action button for advanced search -->
    <!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
    <!--        android:id="@+id/buttonAdvancedSearch"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_alignParentEnd="true"-->
    <!--        android:layout_alignParentBottom="true"-->
    <!--        android:layout_margin="12dp"-->
    <!--        android:contentDescription="חיפוש מתקדם"-->
    <!--        android:src="@android:drawable/ic_menu_mapmode"-->
    <!--        app:backgroundTint="@color/purple_500" />-->

</RelativeLayout>
