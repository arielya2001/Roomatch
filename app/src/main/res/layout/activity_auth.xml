<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    style="@style/Theme.Roomatch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:background="@android:color/transparent"
    android:backgroundTint="@null"
    android:padding="24dp">

    <LinearLayout
        style="@style/Theme.Roomatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Roomatch"
            android:textColor="#1E5C9A"
            android:textSize="32sp"
            android:textStyle="bold" />

        <EditText
            style="@style/Theme.Roomatch.secondary"
            android:id="@+id/editUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שם משתמש"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editEmail"
            style="@style/Theme.Roomatch.secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="אימייל"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <EditText
            android:id="@+id/editPassword"
            style="@style/Theme.Roomatch.secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="12dp"
            android:gravity="right"
            android:hint="סיסמה"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textAlignment="textEnd" />

        <Button
            android:id="@+id/buttonAction"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="12dp"
            android:text="התחבר" />


        <TextView
            android:id="@+id/textView"
            style="@style/Theme.Roomatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="right"
            android:text="אפשרויות נוספות"
            android:textAlignment="viewEnd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="271dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageButton
                android:id="@+id/customGoogleButton"
                style="@style/Theme.Roomatch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/googleg_standard_color_18" />
        </LinearLayout>

        <TextView
            android:id="@+id/switchModeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="אין לך חשבון? הירשם"
            android:textColor="#1E5C9A"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
