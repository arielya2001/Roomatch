<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Theme.Roomatch.secondary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- 砖专转 砖 拽爪 注 驻转专 注专 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- 砖 拽爪 -->

        <Button
            android:id="@+id/editGroupNameButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@android:drawable/ic_menu_edit" />

        <Button
            android:id="@+id/deleteGroupButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:drawable/ic_menu_delete" />

        <TextView
            android:id="@+id/groupNameTextView"
            style="@style/Theme.Roomatch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="4dp"
            android:text="砖 拽爪"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 驻转专 注专 (拽 注驻专) -->

        <!-- 驻转专 拽 (拽 驻) -->

    </LinearLayout>

    <!-- 拽住 专 -->
    <TextView
        android:id="@+id/membersTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="专: 住, , 专转"
        android:textSize="14sp" />

    <!-- 砖专转  -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/managerCrown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:paddingEnd="4dp"
            android:text=""
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/managerNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text=": 专转"
            android:textColor="#FF8800"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
