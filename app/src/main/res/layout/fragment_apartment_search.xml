<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/layoutContent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="דירות פנויות"
            android:textSize="20sp" />

        <!-- סינון לפי שדה -->

        <!-- סדר עולה/יורד -->

        <!-- סינון לפי מרחק -->

        <!-- כפתור ניקוי סינון בלבד -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/buttonClearFilter"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:background="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="נקה סינון" />

            <Button
                android:id="@+id/buttonOpenFilters"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="@mipmap/ic_filter_foreground" />
        </LinearLayout>

        <!-- חיפוש -->

        <LinearLayout
            android:id="@+id/filtersView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/buttonSort"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@mipmap/ic_ascending_foreground" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="מיין לפי:" />

            <Spinner
                android:id="@+id/spinnerFilterField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="רדיוס חיפוש:" />

            <Spinner
                android:id="@+id/spinnerRadius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="חפש לפי עיר, רחוב או תיאור"
            android:iconifiedByDefault="false"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="8dp" />

        <!-- תצוגת דירות -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/apartmentRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- כפתור מיותר שניתן להסיר בהמשך -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonAdvancedSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="12dp"
        android:contentDescription="חיפוש מתקדם"
        android:src="@android:drawable/ic_menu_mapmode"
        app:backgroundTint="@color/purple_500"
        android:visibility="gone" />
</RelativeLayout>
